<body>
<div class="container">
    <h1>SearchNow</h1>
    <div class="search-form">
        <form id="searchForm" onsubmit="search(event)">
            <input type="text" id="searchInput" class="search-input" placeholder="Enter your search query...">
            <button type="submit" class="search-btn">Search</button>
        </form>
    </div>
    <div class="search-results" id="searchResults">
        <!-- Search results will be displayed here -->
    </div>
</div>

<script>
    function search(event) {
        event.preventDefault();
        var query = document.getElementById("searchInput").value;
        var cx = "130cd2c8b6d0142de"; // Replace with your Programmable Search Engine ID
        var apiKey = "AIzaSyB0m4yoTfAqFZG3Znb-Q8MMy4ehIjY1wuI"; // Replace with your API Key
        var url = "https://www.googleapis.com/customsearch/v1?q=" + query + "&cx=" + cx + "&key=" + apiKey;

        fetch(url)
            .then(response => response.json())
            .then(data => {
                displayResults(data.items);
            })
            .catch(error => console.error('Error:', error));
    }

    function displayResults(results) {
        var searchResults = document.getElementById("searchResults");
        searchResults.innerHTML = "";

        results.forEach(result => {
            var title = result.title;
            var link = result.link;

            var searchResult = document.createElement("div");
            searchResult.classList.add("search-result");

            var titleElement = document.createElement("h3");
            titleElement.textContent = title;

            var linkElement = document.createElement("a");
            linkElement.href = link;
            linkElement.textContent = link;
            linkElement.target = "_blank";

            searchResult.appendChild(titleElement);
            searchResult.appendChild(linkElement);
            searchResults.appendChild(searchResult);
        });
    }
</script>
</body>
